""" General settings
set mouse=a
set tabstop=4
set shiftwidth=4
set belloff=all
set list
set foldmethod=indent
set foldlevelstart=99
set number                  " Show line number
set relativenumber
set ignorecase              " Enable case-insensitive search
set smartindent
set autoindent
set incsearch
set nohlsearch
set splitbelow
set splitright
set expandtab
set nocompatible
set fileformat=unix
set encoding=utf-8
" Disable backup
set nobackup
set nowb
set noswapfile

syntax on

set termguicolors

set background=dark
